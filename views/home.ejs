<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home - Blogging Platform</title>
    <link rel="stylesheet" href="/home.css" />
  </head>

  <body>
    <div class="container">
      <h1>Welcome to Our Blogging Platform</h1>

      <!-- Create New User Button -->
      <a href="/add-user" class="create-button">Create New Blog</a>

      <h2>Our Users:</h2>

      <!-- Iterate over the users array -->
      <% users.forEach(user => { %>
      <div class="user-card">
        <div>
          <p class="date">
            <strong>Date:</strong>
            <%= user.date ? user.date.toISOString().split('T')[0] :
            'No-date-available' %>
          </p>

          <h2><%= user.name %></h2>
          <hr />
          <p>
            <strong>Enrollment:</strong>
            <%= user.enroll %>
          </p>
          <hr />
          <p>
            <strong>Email:</strong>
            <%= user.email %>
          </p>
          <hr />
          <p><strong>Blog:</strong></p>
          <div class="blog-content">
            <%- user.para.replace(/\n/g, "<br />") %>
            <!-- Render HTML content -->
          </div>
          <br />
          <hr />
          <br />
        </div>

        <!-- Edit Button -->
        <form action="/user/<%= user.id %>" method="get">
          <button type="submit" class="edit-button">Edit</button>
        </form>

        <div class="button-group">
          <!-- Delete Button with Password Input -->
          <form
            action="/delete/<%= user.id %>"
            method="POST"
            onsubmit="return confirmDelete(this);"
          >
            <input
              type="password"
              name="password"
              required
              placeholder="Enter password"
            />
            <button type="submit" class="delete-button">Delete</button>
          </form>
        </div>
      </div>
      <% }); %>
      <!-- End of forEach loop -->
    </div>

    <script>
      function confirmDelete(form) {
        const password = form.password.value;
        if (!password) {
          alert("Please enter the password.");
          return false;
        }
        return confirm("Are you sure you want to delete this post?");
      }
    </script>
  </body>
</html>
